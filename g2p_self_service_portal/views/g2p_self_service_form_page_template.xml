<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="self_service_form_template"
        inherit_id="g2p_self_service_portal.base"
        name="Self Service Form Template"
        priority="930"
        primary="True"
    >
        <xpath expr="//t[@t-out='0']" position="replace">
            <div class="form-template">
                <div class="row">
                    <div class="col-md-1" />
                    <div class="col-md-11">
                        <div class="details">Application Form</div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb form-layout-breadcrumb">
                                <li class="breadcrumb-item"><a href="/selfservice/home">Home</a></li>
                                <li class="breadcrumb-item" aria-current="page">
                                    <a href="/selfservice/programs">
                                        All Programs
                                    </a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Application Form
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>

                <div id="toast-container">
                    <div id="toast-message" />
                    <button id="toast-close-btn" onclick="hide_toast()">
                        <img src="/g2p_self_service_portal/static/src/img/close_icon@2x.png" />
                    </button>
                </div>

                <div class="row">
                    <div class="col-md-1" />
                    <div class="col-md-7">
                        <div class="card container-left" style="width: auto; padding: 0px;">
                            <div class="card-header form-card-header" style="padding: 0px;">
                                <h5 class="mb-0 form-heading">Application Form</h5>
                                <p class="form-description"><t t-esc="program" /></p>
                            </div>
                            <div class="card-body" style="padding: 0px;">
                                <div class="note">
                                    <div class="container">
                                        <p class="mandatory-fields-note">
                                            Fields marked with
                                            "<span class="s_website_form_mark">*</span>"
                                            are mandatory
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <t t-out="0" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card container-right" style="width: auto; padding: 0px;">
                            <div class="card-header" style="padding: 0px;">
                                <h5 class="action-heading"><t t-esc="program" /></h5>
                                <p class="action-description">
                                    This scheme is available till 31st March, 2023.
                                    Eligible members can avail the benefits by applying to this scheme.
                                </p>
                            </div>

                            <div class="card-body" style="padding: 20px;">
                                <!-- <div id="program_id" invisible="1" class="invisible">
                                    <t t-esc="program_id" />
                                </div> -->
                                <button
                                    onclick="form_submit_action()"
                                    t-att-program="program_id"
                                    id="program_submit_id"
                                    type="submit"
                                    class="btn btn-primary btn-lg btn-block form_submit_action"
                                >
                                    Submit
                                </button>
                                <button
                                    type="button"
                                    class="btn btn-outline-primary btn-lg btn-block form_cancel_action"
                                    data-toggle="modal"
                                    data-target="#exampleModalCenter"
                                >
                                    Cancel
                                </button>

                                <!-- Modal -->
                                <div
                                    class="modal fade"
                                    id="exampleModalCenter"
                                    tabindex="-1"
                                    role="dialog"
                                    aria-labelledby="exampleModalCenterTitle"
                                    aria-hidden="true"
                                >
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5
                                                    class="modal-title"
                                                    id="exampleModalLongTitle"
                                                >Discard applicaton?</h5>
                                            </div>
                                            <div class="modal-body">
                                                <p>
                                                    The entered data will not be saved.
                                                    Are you sure you want to discard the form?
                                                </p>
                                            </div>
                                            <div class="modal-footer">
                                                <button
                                                    type="button"
                                                    class="btn btn-primary modal-discard-button"
                                                    onclick="location.href = '/selfservice/home';"
                                                >
                                                    Discard
                                                </button>
                                                <button
                                                    type="button"
                                                    class="btn btn-outline-primary modal-cancel-button"
                                                    data-dismiss="modal"
                                                >
                                                    Cancel
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1" />
                </div>
                <div class="ssp-contact-us">
                    <div id="chat-bot" class="contact-us-message">
                        <h5>Hi <t t-esc="user" />, how are you doing?</h5>
                        <p>I am here to assist you. Take a few minutes and lets connect!</p>
                    </div>
                    <div class="chat-assist-icon">
                        <a href="#" onclick="toggle_chat_bot()">
                            <img src="/g2p_self_service_portal/static/src/img/Chat_Icon@2x.png" />
                        </a>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
