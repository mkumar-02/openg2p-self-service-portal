<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="g2p_self_service_base"
        name="G2P Self Service Portal Base"
        inherit_id="web.frontend_layout"
        priority="900"
        primary="True"
    >
        <xpath expr="//footer" position="replace">
            <footer t-if="not no_footer" id="bottom" data-anchor="true" t-attf-class="bg-light o_footer">
                <div id="footer" />
                <div t-if="not no_copyright" class="o_footer_copyright">
                    <div class="container py-3">
                        <div class="row">
                            <div class="col-sm text-center text-sm-left text-muted">
                                <!-- TODO : to be hyperlinked -->
                                <span class="mr-2">Home</span>
                            </div>
                            <div class="col-sm text-center text-sm-center text-muted">
                                <!-- TODO : to be hyperlinked -->
                                <span class="mr-2">About</span>
                            </div>
                            <div class="col-sm text-center text-sm-center text-muted">
                                <!-- TODO : to be hyperlinked -->
                                <span class="mr-2">Contact</span>
                            </div>
                            <div class="col-sm text-center text-sm-right">
                                <t t-call="web.brand_promotion" />
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </xpath>
    </template>
</odoo>
